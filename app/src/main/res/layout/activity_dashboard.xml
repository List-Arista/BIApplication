<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/inc_hd"
            layout="@layout/header" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="450dip"
            android:background="@color/cardview_shadow_start_color"
            android:paddingBottom="5dip"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingTop="15dip">

            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                card_view:cardCornerRadius="8dip">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="0.2"
                        android:layout_margin="10dip"
                        card_view:cardCornerRadius="8dip"
                        >
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:text="Loans"
                            android:textSize="20dip"
                            android:textColor="@color/gray"
                            />
                    </androidx.cardview.widget.CardView>


                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pichart"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1.4" />

                    <LinearLayout
                        android:id="@+id/card_view5"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="0.3"
                        android:layout_gravity="center|center_horizontal"
                        android:layout_margin="10dip"
                        >
                        <Button
                            android:id="@+id/loan"
                            style="@style/menuButton"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="View Loan Details"
                            android:layout_marginLeft="30dip"
                            android:layout_marginRight="30dip"
                            android:layout_marginTop="10dip"
                            android:layout_gravity="center_horizontal"/>
                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="450dip"
            android:background="@color/cardview_shadow_start_color"
            android:paddingBottom="5dip"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingTop="15dip">

            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                card_view:cardCornerRadius="8dip">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_gravity="center"
                        android:layout_weight="0.2"
                        android:layout_margin="10dip"
                        card_view:cardCornerRadius="8dip"
                        >
                        <Button

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:text="Deposite"
                            android:textSize="20dip"
                            android:textColor="@color/gray"
                            />
                    </androidx.cardview.widget.CardView>

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/linechart"
                        android:layout_width="match_parent"
                        android:layout_height="5dip"
                        android:layout_weight="1.4" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="0.3"
                        android:layout_gravity="center|center_horizontal"
                        android:layout_margin="10dip"
                        >
                        <Button
                            android:id="@+id/deposite"
                            style="@style/menuButton"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="View Deposite Details"
                            android:layout_marginLeft="30dip"
                            android:layout_marginRight="30dip"
                            android:layout_marginTop="10dip"
                            android:layout_gravity="center_horizontal"/>
                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="450dip"
            android:layout_weight="5"
            android:background="@color/cardview_shadow_start_color"
            android:paddingBottom="5dip"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingTop="15dip">

            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                card_view:cardCornerRadius="8dip">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_gravity="center"
                        android:layout_weight="0.2"
                        android:layout_margin="10dip"
                        card_view:cardCornerRadius="8dip"
                        >
                        <Button

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:text="Advance"
                            android:textSize="20dip"
                            android:textColor="@color/gray"
                            />
                    </androidx.cardview.widget.CardView>

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/linechart1"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1.4" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="0.3"
                        android:layout_gravity="center|center_horizontal"
                        android:layout_margin="10dip"
                        >
                        <Button
                            android:id="@+id/advance"
                            style="@style/menuButton"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="View Advance Details"
                            android:layout_marginLeft="30dip"
                            android:layout_marginRight="30dip"
                            android:layout_marginTop="10dip"
                            android:layout_gravity="center_horizontal"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="355dip"
            android:layout_weight="5"
            android:background="@color/cardview_shadow_start_color"
            android:paddingBottom="5dip"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingTop="15dip">

            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                card_view:cardCornerRadius="8dip">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_gravity="center"
                        android:layout_weight="0.2"
                        android:layout_margin="10dip"
                        card_view:cardCornerRadius="8dip"
                        >
                        <Button

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:text="CR Ratio"
                            android:textSize="20dip"
                            android:textColor="@color/gray"
                            />
                    </androidx.cardview.widget.CardView>

                    <com.github.anastr.speedviewlib.SpeedView
                        android:id="@+id/speedView"
                        android:layout_width="300dip"
                        android:layout_height="0dip"
                        android:layout_gravity="center"
                        android:layout_weight="1.8" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="355dip"
            android:layout_weight="5"
            android:background="@color/cardview_shadow_start_color"
            android:paddingBottom="5dip"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingTop="15dip">

            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                card_view:cardCornerRadius="8dip">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_gravity="center"
                        android:layout_weight="0.2"
                        android:layout_margin="10dip"
                        card_view:cardCornerRadius="8dip"
                        >
                        <Button

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:text="NPA"
                            android:textSize="20dip"
                            android:textColor="@color/gray"
                            />
                    </androidx.cardview.widget.CardView>

                    <com.github.anastr.speedviewlib.SpeedView
                        android:id="@+id/speedViewNPA"
                        android:layout_width="300dip"
                        android:layout_height="0dip"
                        android:layout_gravity="center"
                        android:layout_weight="1.8" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>
</ScrollView>